    <body>
    
      <div class="container">
      <form class="form-signin" role="form" action="/register" method="post" style="max-width: 300px">
        <h2 class="form-signin-heading">Sign Up here</h2>
        <input class="form-control" type="text" name="name" placeholder="Name"/>
        <input class="form-control" type="text" name="username" placeholder="Email ID"/>
        <input class="form-control" type="password" name="password" id="password" placeholder="Password"/>
        <input class="form-control" type="password" name="repeat_password" id="repeat_password" placeholder="Re-type Password"/>
        <input class="form-control" type="text" name="location" placeholder="Location - City"/>
        <br>
        <!-- <input class="form-control" type="number" name="age" placeholder="Age"/> -->
        <!-- <textarea id="datetime" name="date" style="display:none;"></textarea> -->
        <label class="radio-inline">
                <input type="radio" name="user_type" value="user" checked>User
              </label>
              <label class="radio-inline">
                <input type="radio" name="user_type" value="clinician">Clinician
              </label><br>
        <button class="btn btn-lg btn-primary btn-block" id="registerButton" type="submit">Sign Up</button>
      </form>

      <script>
          $(document).ready(function (e) {

            $("#registerButton").click(function (event) {
                if($("#password").val() != $("#repeat_password").val()){

                    event.preventDefault();
                    alert("Passwords incorrect");
                }
            });
          });
    </script>
